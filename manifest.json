{
  "manifest_version": 3,
  "name": "Chat Code Puller",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://api.github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chat.deepseek.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
